<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="fill_parent" android:layout_width="fill_parent">
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:orientation="vertical">
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent" android:layout_height="wrap_content">
  <Button android:layout_marginLeft="2dip" android:text="Change" android:id="@+id/button1" android:gravity="center_vertical" android:layout_height="wrap_content" android:layout_width="wrap_content"></Button>
        
        <LinearLayout android:id="@+id/linearLayout1" android:layout_height="wrap_content" android:layout_width="fill_parent" android:orientation="vertical">
        	<TextView android:layout_marginLeft="2dip" android:text="@string/lift_date_label" android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/selectdatelabel"></TextView>
        <TextView android:layout_marginLeft="2dip" android:text="2005-10-10" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/selecteddate" android:textSize="22dip"></TextView>
        </LinearLayout>    
</LinearLayout>
<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/linearLayout2" android:orientation="vertical" android:layout_margin="5dp">
    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/textView1" android:text="@string/run_label"></TextView>
    <Spinner android:id="@+id/spinner1" android:layout_height="wrap_content" android:layout_width="fill_parent"></Spinner>
</LinearLayout>
<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/linearLayout3" android:orientation="vertical" android:layout_margin="5dp">
    <TextView android:layout_height="wrap_content" android:text="Miles:" android:layout_width="wrap_content" android:id="@+id/textView2"></TextView>
    <EditText android:text="EditText" android:layout_height="wrap_content" android:layout_width="match_parent" android:singleLine="true" android:inputType="numberDecimal" android:id="@+id/miles_number_picker"></EditText>
</LinearLayout>
<TableLayout android:layout_height="wrap_content" android:id="@+id/tableLayout1" android:layout_width="fill_parent">
    <TableRow android:id="@+id/tableRow1" android:layout_height="wrap_content" android:layout_width="fill_parent" android:gravity="center_horizontal" android:layout_marginLeft="10dp">
        <TextView android:text="Hours:" android:id="@+id/textView3" android:layout_height="wrap_content" android:layout_width="100dp"></TextView>
        <TextView android:text="Minutes:" android:id="@+id/textView4" android:layout_height="wrap_content" android:layout_width="100dp"></TextView>
        <TextView android:text="Seconds:" android:id="@+id/textView5" android:layout_height="wrap_content" android:layout_width="100dp"></TextView>
    </TableRow>
    <TableRow android:id="@+id/tableRow2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center_horizontal">
    <com.latchd.picker.NumberPicker android:id="@+id/hours_number_picker" android:layout_height="fill_parent" android:layout_width="100dp">
        
    </com.latchd.picker.NumberPicker>
    <com.latchd.picker.NumberPicker android:layout_width="fill_parent" android:id="@+id/min_number_picker" android:layout_height="fill_parent">
        
    </com.latchd.picker.NumberPicker>
    <com.latchd.picker.NumberPicker android:layout_width="fill_parent" android:id="@+id/sec_number_picker" android:layout_height="fill_parent">
        
    </com.latchd.picker.NumberPicker>
    </TableRow>
</TableLayout>
</LinearLayout>
</ScrollView>
